{
    "swagger": "2.0",
    "info": {
        "title": "Phantom",
        "description": "Documentation of Phantom backend ready for frontend consumption!!",
        "version": "1.0.0",
        "contact": {
            "name": "Elite team",
            "email": "elite@andela.com",
            "url": "https://github.com/atlp-rwanda/phantom-fe-elite"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        }
    },
    "securityDefinitions": {
        "Bearer": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    },
    "servers": [{
        "url": "http://localhost:3000",
        "name": "DEV"
    }],

    "paths": {
        "/": {
            "get": {
                "tags": ["Welcome"],
                "summary": "welcome message",
                "description": "message",
                "operationId": "message",
                "responses": {
                    "201": {
                        "description": "message"
                    }
                },

                "security": [{
                    "Bearer": []
                }]
            }
        },
        "/api/v1/password": {
            "post": {
                "tags": ["Reset Password"],
                "summary": "get user you want to update and send email with the link to update",
                "description": "get user you want to update and send email with the link to update",
                "operationId": "get user you want to update and send email with the link to update",
                "parameters": [
                    {
                        "name": "Email",
                        "in": "body",
                        "type": "string",
                        "description": "Email",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string"
                                }
                            },
                            "required": [ "email"]
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "success"
                    }
                }
            }
        },
        "/api/v1/resetpassword/:token": {
            "put": {
                "tags": ["Reset Password"],
                "summary": "Use the email you have got to update the password",
                "description": "Use the email you have got to update the password",
                "operationId": "Use the email you have got to update the password",
                "parameters": [
                    {
                        "name": "Email",
                        "in": "body",
                        "type": "string",
                        "description": "Email",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "number"
                                },
                                "confirmPassword": {
                                    "type": "number"
                                }
                            },
                            "required": [ "email","password","confirmPassword"]
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "success"
                    }
                }
            }
        }

    }
}